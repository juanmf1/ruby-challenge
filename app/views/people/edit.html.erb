<%= form_with(model: @person, local: true) do |form| %>

    <div>
    <%=form.label :name%>
    <%= form.text_field :name %>
    
    </div>

    <div>
    <%=form.label :surname%>
    <%= form.text_field :surname %>
    
    </div>

    <div>
    <%=form.label :birth_date%>
    <%= form.date_field :birth_date %>
    
    </div>

    <div>
    <%=form.label :dni%>
    <%= form.text_field :dni %>
    
    </div>

    <div>
    <%=form.submit %>
    
    </div>

<%end%>