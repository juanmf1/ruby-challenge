<h1>Listado de personas</h1>


<div class="container-fluid ">

<button type="button" class="btn btn-success" > <%= link_to "Crear nuevo", "people/new", class:"text-decoration-none text-white" %></button>
<p class="m-3 d-inline-block "><b>Average age:</b> <%= @ages %></p>
<table class="table">
    <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Surname</th>
      <th scope="col">Birth Date</th>
      <th scope="col">DNI</th>
    </tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
    <tr>
      <td><%= person.name%></td>
      <td><%= person.surname%></td>
      <td><%= person.birth_date%></td>
      <td><%= person.dni%></td>
      <td>
      <%= link_to "Details", detail_path(person.id), class:"btn btn-primary" %>
      </td>

    </tr>
    <%end%>
  </tbody>
       
    </table>
</div>
  
